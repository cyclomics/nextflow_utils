nextflow_process {

    name "Test Process PrimaryMappedFilter"
    script "consensus/modules/samtools.nf"
    process "PrimaryMappedFilter"
    
    
    test("Filtering primary alignments") {

        when {
            process {
                """
                sample_id = "test_sample"
                bam_file = file("$baseDir/example_datasets/example_native_reads/bam/FAW79986_pass_dbcafcd9_40623079_0_filtered.bam")
                bai_file = file("$baseDir/example_datasets/example_native_reads/bam/FAW79986_pass_dbcafcd9_40623079_0_filtered.bam.bai")
                
                input[0] = Channel.of([sample_id, bam_file, bai_file])
                """
            }
        }
        then {
            assert process.success
            
            def bai_filename = "test_sample.primary_mapped.bam.bai"
            with(process.out[0]) {
                assert path(get(0)[1]).md5 == "a4df4798720072ca05d23674957c7f2e"
                assert path(get(0)[2]).getFileName().toString() == bai_filename
                assert path(get(0)[2]).size() > 0
            }
        }
    }
}
